<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChellTalkApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/creme</item>
        <item name="colorPrimaryVariant">@color/creme_2</item>
        <item name="colorOnPrimary">@color/creme_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/creme_gray</item>
        <item name="colorSecondaryVariant">@color/creme_gray_2</item>
        <item name="colorOnSecondary">@color/creme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/creme</item>
        <item name="android:textColor">@color/creme_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textAppearance">@style/Toolbar.Text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Toolbar.Text" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>