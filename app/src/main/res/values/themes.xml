<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChellTalkApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/creme</item>
        <item name="colorPrimaryVariant">@color/creme_2</item>
        <item name="colorOnPrimary">@color/creme_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/creme_gray</item>
        <item name="colorSecondaryVariant">@color/creme_gray_2</item>
        <item name="colorOnSecondary">@color/creme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/creme_gray</item>
        <item name="android:colorBackground">@color/creme</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>